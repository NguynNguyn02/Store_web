@model PagedList.IPagedList<WebBanHang.Models.EF.News>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .pagination-style-one a {
        padding: 9px 15px;
        background: #FE4C50;
        color: #ffffff;
        border-radius: 50%;
        box-shadow: 0px 5px 10px 0px rgba(0,0,0,.1);
        margin: 5px;
    }

    .pagination-style-one a.selected, .pagination-style-one a:hover, .pagination-style-one a:active, .pagination-style-one a:focus {
            padding: 12px;
            box-shadow: 0px 5px 10px 0px rgba(0,0,0,.5);
        }
</style>
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 2px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-height: 100%;
        max-width: 100%;
    }
</style>
<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <div class="title-news">
                @ViewBag.Title
            </div>

        </div>
    </div>

    @if (Model.Any() && Model != null)
    {
        foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-3">
                    <div class="img-box">
                        <a href="" title="@item.Title"><img src="@item.Image" alt="@item.Title" /></a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="content-box">
                        <h3></h3>
                        <a href="/@item.Alias-n@(item.Id)" title="@item.Title">
                            <h3>@item.Title</h3>
                        </a>
                        <div class="description-box">
                            @item.Description
                        </div>
                    </div>
                </div>
            </div>
            <hr />
        }
        <div class="row">
            <div class="col-5"></div>
            <div class="col-7 pagination pagination-style-one m-t-20">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    }
</div>


