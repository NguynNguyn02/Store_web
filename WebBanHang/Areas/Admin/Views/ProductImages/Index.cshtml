@model IEnumerable<WebBanHang.Models.EF.ProductImage>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
}

<style>
    .glImage {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction:column;
        
    }
    .glImage li{
        display: inline-block;
        position:relative;

    }
    .box-btn{
        position:absolute;
        bottom:0;
        left: 0;
        width:100%;
        text-align:center;
    }
</style>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ảnh sản phẩm </h3>

        <div class="card-tools">
            <button type="button" class="btn btn-danger" data-card-widget="collapse" title="Collapse">
                Xóa hết
            </button>

            <input type="button" class="btn btn-success" value="Thêm ảnh" onclick="BrowseServer();" />
        </div>
    </div>
    <div class="card-body">
        <ul class="glImage">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
            <li id="trow_@item.Id" >
                <img src="@item.Image" width="200" height="200" />
                <div class="box-btn">
                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete"><i class="fa fa-trash"></i></a>
                    @if (item.IsDefault)
                    {
                    
                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-success btnDefault"><i class="fa fa-check"></i></a>
                    }
                    else
                    {
                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-warning btnDefault"><i class="fas fa-window-close"></i></a>

                    }
                </div>
            </li> 
                }
            }
        </ul>
         
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
    <!-- /.card-footer-->
</div>
<script>
    function BrowseServer(field) {
        var finder = new CKFinder();
        finder.selectActionFunction = function (fileUrl) {
            document.getElementById(field).value = fileUrl;
            AddImage(@ViewBag.productId, fileUrl);
        };
        finder.popup();
    };

    function AddImage(id, url) {
        $.ajax({
            url: '/admin/ProductImages/AddImage',
            type: 'POST',
            data: { productId: id, url: url },
            success: function (rs) {
                if (rs.Success) {
                    window.location.reload();
                }
            }
        })
    }
    $(document).ready(function () {
        $('body').on('click', '.btnDelete', function () {
            var id = $(this).data('id');
            var conf = confirm('Bạn có chắc chắn muốn xóa ảnh này không?');
            if (conf === true) {
                $.ajax({
                    url: '/admin/ProductImages/Delete',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            $('#trow_' + id).remove();
                        }
                    }
                })
            }
        })
    })
</script>